---
const currentPath = Astro.url.pathname;
const isBlogActive = currentPath.startsWith('/blog');
---
<nav class="site-nav">
  <div class="nav-inner">
    <a href="/" class="nav-logo">
      <span class="logo-mark" aria-hidden="true"></span>
      Habit Tracker
    </a>
    <div class="nav-actions">
      <a href="/blog" class={`nav-btn${isBlogActive ? ' active' : ''}`}>
        ブログ
      </a>
    </div>
  </div>
</nav>

<style>
  .site-nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.88);
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    border-bottom: 1px solid var(--border);
  }

  .nav-inner {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* ── Logo ── */
  .nav-logo {
    display: inline-flex;
    align-items: center;
    gap: 7px;
    font-size: 1rem;
    font-weight: 700;
    color: var(--text-dark);
    text-decoration: none;
    letter-spacing: -0.02em;
    transition: opacity 0.15s;
  }

  .nav-logo:hover {
    opacity: 0.65;
  }

  .logo-mark {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--primary);
    flex-shrink: 0;
    box-shadow: 0 0 0 2.5px rgba(76, 99, 238, 0.18);
  }

  /* ── Nav button ── */
  .nav-actions {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .nav-btn {
    display: inline-flex;
    align-items: center;
    padding: 6px 16px;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-muted);
    text-decoration: none;
    border: 1.5px solid var(--border);
    border-radius: 999px;
    background: transparent;
    transition: color 0.18s ease, border-color 0.18s ease,
                background 0.18s ease, box-shadow 0.18s ease,
                transform 0.18s ease;
    letter-spacing: -0.01em;
    cursor: pointer;
  }

  .nav-btn:hover {
    color: var(--primary);
    border-color: var(--primary);
    background: rgba(76, 99, 238, 0.06);
    transform: translateY(-1px);
  }

  .nav-btn.active {
    color: #fff;
    background: var(--primary);
    border-color: var(--primary);
    box-shadow: 0 2px 10px rgba(76, 99, 238, 0.28);
  }

  .nav-btn.active:hover {
    background: var(--primary-dark);
    border-color: var(--primary-dark);
    box-shadow: 0 4px 14px rgba(76, 99, 238, 0.38);
    transform: translateY(-1px);
  }
</style>
