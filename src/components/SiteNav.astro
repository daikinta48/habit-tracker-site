---
const currentPath = Astro.url.pathname;
const isBlogActive = currentPath.startsWith('/blog');
---
<nav class="site-nav">
  <div class="nav-inner">
    <a href="/" class="nav-logo">
      <span class="logo-mark" aria-hidden="true"></span>
      Habit Tracker
    </a>
    <div class="nav-actions">
      <a href="/blog" class={`nav-btn${isBlogActive ? ' active' : ''}`}>
        ブログ
      </a>
      <a
        href="https://apps.apple.com/app/habit-tracker-small-wins/id6757263291"
        class="nav-btn nav-btn--cta"
        target="_blank"
        rel="noopener noreferrer"
        onclick="if(typeof gtag!=='undefined'){gtag('event','cta_click',{event_category:'download',event_label:'nav',value:1});}"
      >
        <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/></svg>
        無料DL
      </a>
    </div>
  </div>
</nav>

<style>
  .site-nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.88);
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    border-bottom: 1px solid var(--border);
  }

  .nav-inner {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* ── Logo ── */
  .nav-logo {
    display: inline-flex;
    align-items: center;
    gap: 7px;
    font-size: 1rem;
    font-weight: 700;
    color: var(--text-dark);
    text-decoration: none;
    letter-spacing: -0.02em;
    transition: opacity 0.15s;
  }

  .nav-logo:hover {
    opacity: 0.65;
  }

  .logo-mark {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--primary);
    flex-shrink: 0;
    box-shadow: 0 0 0 2.5px rgba(76, 99, 238, 0.18);
  }

  /* ── Nav button ── */
  .nav-actions {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .nav-btn {
    display: inline-flex;
    align-items: center;
    padding: 6px 16px;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-muted);
    text-decoration: none;
    border: 1.5px solid var(--border);
    border-radius: 999px;
    background: transparent;
    transition: color 0.18s ease, border-color 0.18s ease,
                background 0.18s ease, box-shadow 0.18s ease,
                transform 0.18s ease;
    letter-spacing: -0.01em;
    cursor: pointer;
  }

  .nav-btn:hover {
    color: var(--primary);
    border-color: var(--primary);
    background: rgba(76, 99, 238, 0.06);
    transform: translateY(-1px);
  }

  .nav-btn.active {
    color: #fff;
    background: var(--primary);
    border-color: var(--primary);
    box-shadow: 0 2px 10px rgba(76, 99, 238, 0.28);
  }

  .nav-btn.active:hover {
    background: var(--primary-dark);
    border-color: var(--primary-dark);
    box-shadow: 0 4px 14px rgba(76, 99, 238, 0.38);
    transform: translateY(-1px);
  }

  .nav-btn--cta {
    display: none;
    align-items: center;
    gap: 5px;
    background: var(--primary);
    color: #fff;
    border-color: var(--primary);
    box-shadow: 0 2px 8px rgba(76, 99, 238, 0.25);
  }

  .nav-btn--cta:hover {
    background: var(--primary-dark);
    border-color: var(--primary-dark);
    color: #fff;
    box-shadow: 0 4px 14px rgba(76, 99, 238, 0.38);
  }

  @media (min-width: 480px) {
    .nav-btn--cta {
      display: inline-flex;
    }
  }
</style>
