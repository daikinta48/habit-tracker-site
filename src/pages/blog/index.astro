---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Footer from '../../components/Footer.astro';

const posts = (await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
})).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---
<BaseLayout title="ブログ - Habit Tracker" description="Habit Trackerの開発ストーリーや習慣に関するブログです。">
  <div class="container">
    <header class="blog-header">
      <a href="/" class="back-link">← トップページ</a>
      <h1>ブログ</h1>
    </header>

    {posts.length === 0 ? (
      <p class="empty">記事はまだありません。</p>
    ) : (
      <ul class="post-list">
        {posts.map((post) => (
          <li class="post-card">
            <a href={`/blog/${post.slug}`}>
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <h2>{post.data.title}</h2>
              <p>{post.data.description}</p>
              {post.data.tags && (
                <div class="tags">
                  {post.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </a>
          </li>
        ))}
      </ul>
    )}
  </div>
  <Footer />
</BaseLayout>

<style>
  .blog-header {
    padding: 48px 0 32px;
  }

  .blog-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-top: 16px;
    letter-spacing: -0.02em;
  }

  .back-link {
    display: inline-block;
    color: var(--primary);
    text-decoration: none;
    font-size: 0.9375rem;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .empty {
    color: var(--text-muted);
    padding: 40px 0;
  }

  .post-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-bottom: 80px;
  }

  .post-card a {
    display: block;
    background: var(--bg-white);
    border-radius: var(--radius-md);
    padding: 24px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .post-card a:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  .post-card time {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .post-card h2 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-dark);
    margin: 8px 0;
    line-height: 1.5;
  }

  .post-card p {
    font-size: 0.9375rem;
    color: var(--text-muted);
    line-height: 1.7;
  }

  .tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-top: 12px;
  }

  .tag {
    font-size: 0.75rem;
    background: var(--primary-light);
    color: var(--primary);
    padding: 2px 10px;
    border-radius: 99px;
    font-weight: 500;
  }
</style>
