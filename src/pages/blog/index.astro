---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Footer from '../../components/Footer.astro';

const posts = (await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
})).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// タグ集計
const tagCounts = new Map<string, number>();
for (const post of posts) {
  for (const tag of post.data.tags ?? []) {
    tagCounts.set(tag, (tagCounts.get(tag) ?? 0) + 1);
  }
}
const allTags = [...tagCounts.entries()].sort((a, b) => b[1] - a[1]);

// 読了時間（約500文字/分）
function readingTime(body: string) {
  return Math.max(1, Math.ceil(body.length / 500));
}
---
<BaseLayout
  title="ブログ - Habit Tracker"
  description="習慣に関するヒントや、Habit Trackerの開発ストーリーを発信するブログです。三日坊主・習慣化・モーニングルーティンなど日本語記事を掲載。"
  canonicalPath="/blog"
>
  <div class="container">
    <header class="blog-header">
      <h1>ブログ</h1>
      <p class="post-count">{posts.length}件の記事</p>
    </header>

    {allTags.length > 0 && (
      <section class="tag-cloud" aria-label="タグで絞り込む">
        <p class="tag-cloud-label">タグで絞り込む</p>
        <div class="tag-list">
          <a href="/blog" class="tag-btn tag-btn--all" aria-current="page">すべて</a>
          {allTags.map(([tag, count]) => (
            <a href={`/blog/tag/${tag}`} class="tag-btn">
              {tag}
              <span class="tag-btn-count">{count}</span>
            </a>
          ))}
        </div>
      </section>
    )}

    {posts.length === 0 ? (
      <p class="empty">記事はまだありません。</p>
    ) : (
      <ul class="post-list">
        {posts.map((post) => (
          <li class="post-card">
            <a href={`/blog/${post.slug}`} class="card-link">
              <div class="card-meta">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                <span class="reading-time">約{readingTime(post.body)}分</span>
              </div>
              <h2>{post.data.title}</h2>
              <p>{post.data.description}</p>
            </a>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="tags">
                {post.data.tags.map((tag) => (
                  <a href={`/blog/tag/${tag}`} class="tag">{tag}</a>
                ))}
              </div>
            )}
          </li>
        ))}
      </ul>
    )}
  </div>
  <Footer />
</BaseLayout>

<style>
  .blog-header {
    padding: 48px 0 24px;
    display: flex;
    align-items: baseline;
    gap: 16px;
    flex-wrap: wrap;
  }

  .blog-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-dark);
    letter-spacing: -0.02em;
  }

  .post-count {
    font-size: 0.9375rem;
    color: var(--text-muted);
  }

  /* タグクラウド */
  .tag-cloud {
    margin-bottom: 32px;
  }

  .tag-cloud-label {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin-bottom: 12px;
  }

  .tag-list {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .tag-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    border-radius: 99px;
    border: 1.5px solid var(--border);
    background: var(--bg-white);
    color: var(--text-body);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: border-color 0.15s, background 0.15s, color 0.15s;
  }

  .tag-btn:hover {
    border-color: var(--primary);
    color: var(--primary);
    background: var(--primary-light);
  }

  .tag-btn--all {
    border-color: var(--primary);
    background: var(--primary);
    color: #fff;
  }

  .tag-btn--all:hover {
    background: var(--primary-dark);
    color: #fff;
    border-color: var(--primary-dark);
  }

  .tag-btn-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 0 4px;
    border-radius: 99px;
    background: rgba(0, 0, 0, 0.08);
    font-size: 0.75rem;
    font-weight: 600;
    line-height: 1;
  }

  .tag-btn--all .tag-btn-count {
    background: rgba(255, 255, 255, 0.25);
  }

  /* 記事リスト */
  .empty {
    color: var(--text-muted);
    padding: 40px 0;
  }

  .post-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-bottom: 80px;
  }

  /* カード（stretched-link パターン） */
  .post-card {
    position: relative;
    background: var(--bg-white);
    border-radius: var(--radius-md);
    padding: 24px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .post-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  .card-link {
    display: block;
    text-decoration: none;
  }

  /* カード全体をクリック可能にする */
  .card-link::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    z-index: 1;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 8px;
  }

  .card-link time {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .reading-time {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .reading-time::before {
    content: '·';
    margin-right: 12px;
    opacity: 0.4;
  }

  .card-link h2 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-dark);
    margin: 0 0 8px;
    line-height: 1.5;
  }

  .card-link p {
    font-size: 0.9375rem;
    color: var(--text-muted);
    line-height: 1.7;
    margin: 0;
  }

  /* タグ（stretched-link より前面に） */
  .tags {
    position: relative;
    z-index: 2;
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
    margin-top: 14px;
  }

  .tag {
    font-size: 0.75rem;
    background: var(--primary-light);
    color: var(--primary);
    padding: 3px 10px;
    border-radius: 99px;
    font-weight: 500;
    text-decoration: none;
    transition: background 0.15s, color 0.15s;
    position: relative;
    z-index: 2;
  }

  .tag:hover {
    background: var(--primary);
    color: #fff;
  }
</style>
