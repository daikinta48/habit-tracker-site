---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Footer from '../../../components/Footer.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });

  const tags = [...new Set(allPosts.flatMap((p) => p.data.tags ?? []))];

  return tags.map((tag) => ({
    params: { tag },
    props: {
      tag,
      posts: allPosts
        .filter((p) => p.data.tags?.includes(tag))
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()),
      allTags: [...new Map(
        allPosts.flatMap((p) =>
          (p.data.tags ?? []).map((t) => [t, (allPosts.filter((pp) => pp.data.tags?.includes(t)).length)])
        )
      ).entries()].sort((a, b) => b[1] - a[1]),
    },
  }));
}

const { tag, posts, allTags } = Astro.props;

function readingTime(body: string) {
  return Math.max(1, Math.ceil(body.length / 500));
}
---
<BaseLayout
  title={`「${tag}」の記事一覧 - Habit Tracker`}
  description={`「${tag}」タグがついたブログ記事の一覧です。`}
  canonicalPath={`/blog/tag/${tag}`}
>
  <div class="container">
    <header class="blog-header">
      <a href="/blog" class="back-link">← ブログ一覧</a>
      <h1>
        <span class="tag-label">タグ</span>
        {tag}
      </h1>
      <p class="post-count">{posts.length}件の記事</p>
    </header>

    {allTags.length > 0 && (
      <section class="tag-cloud" aria-label="タグで絞り込む">
        <p class="tag-cloud-label">タグで絞り込む</p>
        <div class="tag-list">
          <a href="/blog" class="tag-btn">すべて</a>
          {allTags.map(([t, count]) => (
            <a
              href={`/blog/tag/${t}`}
              class={`tag-btn${t === tag ? ' tag-btn--active' : ''}`}
              aria-current={t === tag ? 'page' : undefined}
            >
              {t}
              <span class="tag-btn-count">{count}</span>
            </a>
          ))}
        </div>
      </section>
    )}

    {posts.length === 0 ? (
      <p class="empty">この タグの記事はまだありません。</p>
    ) : (
      <ul class="post-list">
        {posts.map((post) => (
          <li class="post-card">
            <a href={`/blog/${post.slug}`} class="card-link">
              <div class="card-meta">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                <span class="reading-time">約{readingTime(post.body)}分</span>
              </div>
              <h2>{post.data.title}</h2>
              <p>{post.data.description}</p>
            </a>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="tags">
                {post.data.tags.map((t) => (
                  <a
                    href={`/blog/tag/${t}`}
                    class={`tag${t === tag ? ' tag--active' : ''}`}
                  >{t}</a>
                ))}
              </div>
            )}
          </li>
        ))}
      </ul>
    )}
  </div>
  <Footer />
</BaseLayout>

<style>
  .blog-header {
    padding: 48px 0 24px;
  }

  .back-link {
    display: inline-block;
    color: var(--primary);
    text-decoration: none;
    font-size: 0.9375rem;
    margin-bottom: 16px;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .blog-header h1 {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--text-dark);
    letter-spacing: -0.02em;
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
    margin-bottom: 8px;
  }

  .tag-label {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--primary);
    background: var(--primary-light);
    padding: 4px 10px;
    border-radius: 99px;
    letter-spacing: 0.02em;
  }

  .post-count {
    font-size: 0.9375rem;
    color: var(--text-muted);
  }

  /* タグクラウド */
  .tag-cloud {
    margin-bottom: 32px;
  }

  .tag-cloud-label {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin-bottom: 12px;
  }

  .tag-list {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .tag-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    border-radius: 99px;
    border: 1.5px solid var(--border);
    background: var(--bg-white);
    color: var(--text-body);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: border-color 0.15s, background 0.15s, color 0.15s;
  }

  .tag-btn:hover {
    border-color: var(--primary);
    color: var(--primary);
    background: var(--primary-light);
  }

  .tag-btn--active {
    border-color: var(--primary);
    background: var(--primary);
    color: #fff;
  }

  .tag-btn--active:hover {
    background: var(--primary-dark);
    border-color: var(--primary-dark);
    color: #fff;
  }

  .tag-btn-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 0 4px;
    border-radius: 99px;
    background: rgba(0, 0, 0, 0.08);
    font-size: 0.75rem;
    font-weight: 600;
    line-height: 1;
  }

  .tag-btn--active .tag-btn-count {
    background: rgba(255, 255, 255, 0.25);
  }

  /* 記事リスト */
  .empty {
    color: var(--text-muted);
    padding: 40px 0;
  }

  .post-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-bottom: 80px;
  }

  .post-card {
    position: relative;
    background: var(--bg-white);
    border-radius: var(--radius-md);
    padding: 24px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .post-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  .card-link {
    display: block;
    text-decoration: none;
  }

  .card-link::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    z-index: 1;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 8px;
  }

  .card-link time {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .reading-time {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .reading-time::before {
    content: '·';
    margin-right: 12px;
    opacity: 0.4;
  }

  .card-link h2 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-dark);
    margin: 0 0 8px;
    line-height: 1.5;
  }

  .card-link p {
    font-size: 0.9375rem;
    color: var(--text-muted);
    line-height: 1.7;
    margin: 0;
  }

  .tags {
    position: relative;
    z-index: 2;
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
    margin-top: 14px;
  }

  .tag {
    font-size: 0.75rem;
    background: var(--primary-light);
    color: var(--primary);
    padding: 3px 10px;
    border-radius: 99px;
    font-weight: 500;
    text-decoration: none;
    transition: background 0.15s, color 0.15s;
    position: relative;
    z-index: 2;
  }

  .tag:hover,
  .tag--active {
    background: var(--primary);
    color: #fff;
  }
</style>
