  <script>
    function initGalleryDots() {
      const scroll = document.getElementById('gallery-scroll');
      const dotsContainer = document.getElementById('gallery-dots');
      if (!scroll || !dotsContainer) return;

      const items = scroll.querySelectorAll('.gallery-item');
      items.forEach(function(_, i) {
        var dot = document.createElement('button');
        dot.className = 'gallery-dot' + (i === 0 ? ' active' : '');
        dot.setAttribute('aria-label', '画像 ' + (i + 1) + ' を表示');
        dot.addEventListener('click', function() {
          items[i].scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
        });
        dotsContainer.appendChild(dot);
      });

      var dots = dotsContainer.querySelectorAll('.gallery-dot');
      var observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting) {
            var idx = Array.prototype.indexOf.call(items, entry.target);
            dots.forEach(function(d, di) {
              d.classList.toggle('active', di === idx);
            });
          }
        });
      }, { root: scroll, threshold: 0.6 });

      items.forEach(function(item) { observer.observe(item); });
    }

    function initScrollAnimations() {
      var targets = document.querySelectorAll('.fade-up');
      if (!('IntersectionObserver' in window)) {
        targets.forEach(function(el) { el.classList.add('is-visible'); });
        return;
      }
      var observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.15, rootMargin: '0px 0px -40px 0px' });
      targets.forEach(function(el) { observer.observe(el); });
    }

    document.addEventListener('DOMContentLoaded', function() {
      initGalleryDots();
      initScrollAnimations();
    });
  </script>
